{% extends 'back/base_back_circuit.html.twig' %}

{% block title %}Circuit index{% endblock %}

{% block body %}
<style>

#circuit {
	background-color: #f0e0f0;
	margin-left: 50px;
	width: 95%;
}

#circuit th {
	background-color: #305060;
	padding: 20px;
	border: 2px solid black;
}

#circuit td {
	border: 1px solid black;
	}

#circuit tr:nth-child(even){background-color: #f0d0d0;}

</style>

    <h1>Index des circuits</h1>

    <table class="table" id="circuit">
        <thead id="head">
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>PaysDepart</th>
                <th>VilleDepart</th>
                <th>VilleArrivee</th>
                <th>DureeCircuit</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for circuit in circuits %}
            <tr>
                <td>{{ circuit.id }}</td>
                <td>{{ circuit.description }}</td>
                <td>{{ circuit.paysDepart }}</td>
                <td>{{ circuit.villeDepart }}</td>
                <td>{{ circuit.villeArrivee }}</td>
                <td>{{ circuit.dureeCircuit }}</td>
                <td>
                    <a href="{{ path('admin_circuit_show', {'id': circuit.id}) }}">Afficher</a>
                    <a href="{{ path('admin_circuit_edit', {'id': circuit.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_circuit_new') }}">Créer un nouveau circuit</a>
{% endblock %}
